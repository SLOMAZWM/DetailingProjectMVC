@model ProjektLABDetailing.Models.ViewModels.AddCarImagesViewModel

@{
    ViewData["Title"] = "Dodaj Zdjęcia";
}

<h1>Dodaj Zdjęcia dla @Model.CarDetails</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewBag.Errors)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

@using (Html.BeginForm("AddCarImages", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(m => m.CarId)

    <div class="form-group">
        <label for="Images">Wybierz zdjęcia</label>
        <input type="file" name="Images" multiple class="form-control" />
    </div>

    <div class="form-group">
        <label for="Title">Tytuł</label>
        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="Description">Opis</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Dodaj Zdjęcia</button>
}
