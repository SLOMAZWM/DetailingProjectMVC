@model ProjektLABDetailing.Models.ViewModels.OrderDetailsViewModel

@{
    ViewData["Title"] = "Potwierdzenie zamówienia";
}

<div class="order-confirmation">
    <h2>Potwierdzenie zamówienia</h2>

    <p>Dziękujemy za złożenie zamówienia! Twoje zamówienie zostało złożone i jest w trakcie realizacji.</p>

    <div class="order-details">
        <h3>Szczegóły zamówienia</h3>
        <p><strong>Numer zamówienia:</strong> @Model.OrderId</p>
        <p><strong>Data zamówienia:</strong> @Model.OrderDate.ToString("dd-MM-yyyy")</p>
        <p><strong>Imię:</strong> @Model.ClientName</p>
        <p><strong>Email:</strong> @Model.ClientEmail</p>
        <p><strong>Numer telefonu:</strong> @Model.ClientPhoneNumber</p>
        <p><strong>Adres:</strong> @Model.Address</p>
        <p><strong>Miasto:</strong> @Model.City</p>
        <p><strong>Kod pocztowy:</strong> @Model.PostalCode</p>
        <p><strong>Sposób płatności:</strong> @Model.PaymentMethod</p>
        <p><strong>Sposób dostawy:</strong> @Model.DeliveryMethod</p>
    </div>

    <div class="products">
        <h3>Produkty</h3>
        <table class="table tablecheckout">
            <thead>
                <tr>
                    <th>Nazwa</th>
                    <th>Ilość</th>
                    <th>Cena</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Quantity</td>
                        <td>@product.Price.ToString("c")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <p><strong>Całkowita cena:</strong> @Model.TotalPrice.ToString("c")</p>
</div>