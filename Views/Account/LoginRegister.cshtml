@model ProjektLABDetailing.Models.User.ViewModels.LoginRegisterViewModel

<head>
    <link rel="stylesheet" href="~/css/site.css">
    <title>Logowanie i Rejestracja</title>
</head>

<div class="container">
    <div class="Login">
        <div class="LoginForm">
            <h1 class="LoginSticker">Login</h1>
            <form id="loginForm" method="post" asp-action="Login">
                <input id="LoginEmail" class="EmailLog" asp-for="LoginUser.Email" type="text" placeholder="Email" />
                <span asp-validation-for="LoginUser.Email" class="text-danger"></span>
                <input id="LoginPassword" class="PasswordLog" asp-for="LoginUser.Password" type="password" placeholder="Hasło" />
                <span asp-validation-for="LoginUser.Password" class="text-danger"></span>
                <button class="LoginBttn" type="submit">Zaloguj</button>
            </form>
        </div>
    </div>

    <div class="Line"></div>

    <div class="Register">
        <div class="RegisterForm">
            <h1 class="RegisterSticker">Rejestracja</h1>
            <form id="registerForm" method="post" asp-action="Register">
                <input id="FirstName" class="FirstNameReg" asp-for="RegisterUser.FirstName" type="text" placeholder="Imię" />
                <span asp-validation-for="RegisterUser.FirstName" class="text-danger"></span>
                <input id="LastName" class="LastNameReg" asp-for="RegisterUser.LastName" type="text" placeholder="Nazwisko" />
                <span asp-validation-for="RegisterUser.LastName" class="text-danger"></span>
                <input id="PhoneNumber" class="PhoneNumberReg" asp-for="RegisterUser.PhoneNumber" type="text" placeholder="Telefon" />
                <span asp-validation-for="RegisterUser.PhoneNumber" class="text-danger"></span>
                <input id="Email" class="EmailReg" asp-for="RegisterUser.Email" type="text" placeholder="Email" />
                <span asp-validation-for="RegisterUser.Email" class="text-danger"></span>
                <input id="Password" class="PasswordReg" asp-for="RegisterUser.Password" type="password" placeholder="Hasło" />
                <span asp-validation-for="RegisterUser.Password" class="text-danger"></span>
                <button class="RegisterBttn" type="submit">Zarejestruj</button>
            </form>
        </div>
    </div>
</div>
<div id="errorMessages"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/ValidationLoginRegister.js"></script>
}
